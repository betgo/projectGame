{
  "name": "projectgame",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --config editor/vite.config.ts",
    "build": "tsc -p tsconfig.json --noEmit && vite build --config editor/vite.config.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest run",
    "test:schema": "vitest run tests/schema",
    "test:determinism": "vitest run tests/determinism",
    "test:smoke-ai-package": "vitest run tests/smoke",
    "simulate:scenario": "node --import tsx tools/simulate/run-scenario.ts",
    "simulate:batch": "node --import tsx tools/simulate/run-batch.ts",
    "memory:install": "bash tools/git-memory/install.sh",
    "gate:fast": "pnpm typecheck && pnpm test:determinism && pnpm test:schema",
    "gate:full": "pnpm lint && pnpm test && pnpm test:determinism && pnpm test:schema && pnpm test:smoke-ai-package",
    "docs:sync-check": "node --import tsx tools/dev-loop/doc-sync.ts --check",
    "subtask:close": "bash tools/git-memory/finalize-task.sh",
    "dev:loop": "node --import tsx tools/dev-loop/loop.ts",
    "dev:loop:dry-run": "node --import tsx tools/dev-loop/loop.ts --dry-run=true --auto-commit=false --auto-finalize-memory=false"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.174.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  }
}
